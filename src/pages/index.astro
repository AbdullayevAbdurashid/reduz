---
import Layout from "../layouts/Layout.astro";
import Teacher from "../components/Teacher.astro";
import Card from "../components/Card.astro";

import { api } from "../lib/api";

// Get latest 3 posts
const { items: latestPosts } = await api.getPosts({ perPage: 3 });
---

<Layout title="Muxandislik maktabi">
  <main>
    <!-- BANNER SECTION START -->
    <section>
      <div class="ed-banner-slider swiper relative">
        <div class="swiper-wrapper">
          <!-- single slide -->
          <div class="swiper-slide">
            <div
              class="pt-[390px] md:pt-[300px] xs:pt-[280px] pb-[205px] bg-[url('../assets/img/1-1.jpg')] bg-no-repeat bg-center bg-cover relative z-[1] before:absolute before:-z-[1] before:inset-0 before:bg-edblue/70 before:pointer-events-none"
            >
              <div class="mx-[10%] md:mx-[15px]">
                <div
                  class="text-white w-[48%] xl:w-[60%] md:w-[70%] sm:w-[80%] xs:w-full"
                >
                  <h6 class="font-medium uppercase tracking-[3px] mb-[16px]">
                    Kelajak Muhandislari <span class="text-edyellow"
                      >Maktabiga</span
                    > Xush Kelibsiz
                  </h6>
                  <h2
                    class="font-bold text-[clamp(35px,4.57vw,80px)] leading-[1.13] mb-[15px]"
                  >
                    Zamonaviy Texnologiyalar va Robotlar Dunyosi
                  </h2>
                  <p class="leading-[1.75] mb-[41px]">
                    5 yoshdan 17 yoshgacha bo'lgan bolalar uchun robototexnika,
                    dasturlash va muhandislik kurslari. Kelajak kasblarini
                    bugundan o'rganing!
                  </p>
                  <div class="flex items-center gap-[20px]">
                    <a href="contact.html" class="ed-btn">Ro'yxatdan o'tish</a>
                    <a
                      href="about.html"
                      class="ed-btn !bg-transparent border border-white hover:!bg-white hover:text-edpurple"
                      >Batafsil</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- single slide -->
          <div class="swiper-slide">
            <div
              class="pt-[390px] md:pt-[300px] xs:pt-[280px] pb-[205px] bg-[url('../assets/img/1-2.jpg')] bg-no-repeat bg-center bg-cover relative z-[1] before:absolute before:-z-[1] before:inset-0 before:bg-edblue/70 before:pointer-events-none"
            >
              <div class="mx-[10%] md:mx-[15px]">
                <div
                  class="text-white w-[48%] xl:w-[60%] md:w-[70%] sm:w-[80%] xs:w-full"
                >
                  <h6 class="font-medium uppercase tracking-[3px] mb-[16px]">
                    O'qituvchilar <span class="text-edyellow">uchun</span> maxsus
                    dastur
                  </h6>
                  <h2
                    class="font-bold text-[clamp(35px,4.57vw,80px)] leading-[1.13] mb-[15px]"
                  >
                    Robototexnika Bo'yicha Malaka Oshirish
                  </h2>
                  <p class="leading-[1.75] mb-[41px]">
                    Maktab o'qituvchilari uchun zamonaviy robototexnika va STEM
                    ta'limi bo'yicha maxsus kurslar. O'z bilimlaringizni
                    yangilang!
                  </p>
                  <div class="flex items-center gap-[20px]">
                    <a href="contact.html" class="ed-btn">Ro'yxatdan o'tish</a>
                    <a
                      href="about.html"
                      class="ed-btn !bg-transparent border border-white hover:!bg-white hover:text-edpurple"
                      >Batafsil</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- nav buttons unchanged -->
        <div
          class="ed-banner-slider-nav absolute z-[1] top-[50%] xs:top-[80%] right-[130px] md:right-[60px] sm:right-[40px] xs:hidden flex flex-col gap-[15px] *:w-[40px] *:h-[40px] *:rounded-full *:border *:border-white/20 *:text-white *:text-[18px]"
        >
          <button
            class="prev hover:bg-edyellow hover:border-edyellow hover:text-black"
          >
            <i class="fa-solid fa-angle-up"></i>
          </button>
          <button
            class="next leading-[43px] hover:bg-edyellow hover:border-edyellow hover:text-black"
          >
            <i class="fa-solid fa-angle-down"></i>
          </button>
        </div>
      </div>
    </section>

    <!-- FEATURES SECTION -->
    <section class="-mt-[70px] relative z-[2]">
      <div
        class="mx-[19.71%] xxxl:mx-[14.71%] xxl:mx-[9.71%] xl:mx-[5.71%] md:mx-[12px]"
      >
        <div class="grid grid-cols-3 md:grid-cols-2 xs:grid-cols-1 gap-[30px]">
          <!-- Robotics feature -->
          <div
            class="bg-[#FAF9F6] hover:bg-edyellow border-t-[7px] border-edyellow hover:border-edpurple duration-[400ms] p-[30px] sm:p-[25px] group relative z-[1] before:absolute before:-z-[1] before:inset-0 before:bg-[url('../assets/img/faeture-bg.jpg')] before:mix-blend-hard-light before:opacity-0 before:duration-[400ms] hover:before:opacity-15"
          >
            <span class="icon">
              <img
                src="assets/img/feature-1.svg"
                alt="robototexnika"
                class="mb-[11px]"
              />
            </span>
            <h4
              class="font-semibold text-[24px] xl:text-[22px] mb-[3px] text-edblue"
            >
              <a href="#" class="hover:text-white">Robototexnika</a>
            </h4>
            <p class="text-edgray2 group-hover:text-black mb-[18px]">
              Zamonaviy robototexnika va dasturlash asoslarini o'rganing. LEGO
              va Arduino platformalarida amaliy tajriba
            </p>
            <a href="#" class="text-edblue hover:text-edpurple">
              <span class="text-[14px]"
                ><i class="fa-solid fa-angle-right"></i></span
              >
              Batafsil
            </a>
          </div>

          <!-- Programming feature -->
          <div
            class="bg-[#FAF9F6] hover:bg-edyellow border-t-[7px] border-edyellow hover:border-edpurple duration-[400ms] p-[30px] sm:p-[25px] group relative z-[1] before:absolute before:-z-[1] before:inset-0 before:bg-[url('../assets/img/faeture-bg.jpg')] before:mix-blend-hard-light before:opacity-0 before:duration-[400ms] hover:before:opacity-15"
          >
            <span class="icon">
              <img
                src="assets/img/feature-2.svg"
                alt="dasturlash"
                class="mb-[11px]"
              />
            </span>
            <h4
              class="font-semibold text-[24px] xl:text-[22px] mb-[3px] text-edblue"
            >
              <a href="#" class="hover:text-white">Dasturlash</a>
            </h4>
            <p class="text-black group-hover:text-black mb-[18px]">
              Python va Scratch dasturlash tillarini o'rganish. Algoritmik
              fikrlash va dasturlash asoslari
            </p>
            <a href="#" class="text-edblue hover:text-edpurple">
              <span class="text-[14px]"
                ><i class="fa-solid fa-angle-right"></i></span
              >
              Batafsil
            </a>
          </div>

          <!-- Engineering feature -->
          <div
            class="bg-[#FAF9F6] hover:bg-edyellow border-t-[7px] border-edyellow hover:border-edpurple duration-[400ms] p-[30px] sm:p-[25px] group relative z-[1] before:absolute before:-z-[1] before:inset-0 before:bg-[url('../assets/img/faeture-bg.jpg')] before:mix-blend-hard-light before:opacity-0 before:duration-[400ms] hover:before:opacity-15"
          >
            <span class="icon">
              <img
                src="assets/img/feature-3.svg"
                alt="muhandislik"
                class="mb-[11px]"
              />
            </span>
            <h4
              class="font-semibold text-[24px] xl:text-[22px] mb-[3px] text-edblue"
            >
              <a href="#" class="hover:text-edpurple">Muhandislik</a>
            </h4>
            <p class="text-edgray2 group-hover:text-black mb-[18px]">
              3D modellashtirish va prototiplash. Loyihalashtirish va
              muhandislik ko'nikmalari
            </p>
            <a href="#" class="text-edblue hover:text-edpurple">
              <span class="text-[14px]"
                ><i class="fa-solid fa-angle-right"></i></span
              >
              Batafsil
            </a>
          </div>
        </div>
      </div>
    </section>
    <!-- FEATURES SECTION END -->

    <!-- ABOUT SECTION START -->
    <section class="py-[120px] xl:py-[80px] md:py-[60px]">
      <div
        class="mx-[19.71%] xxxl:mx-[14.71%] xxl:mx-[9.71%] xl:mx-[5.71%] md:mx-[12px]"
      >
        <div
          class="flex md:flex-col justify-between items-center gap-x-[60px] xl:gap-x-[40px] gap-y-[40px]"
        >
          <!-- img -->
          <div class="max-w-[50%] md:max-w-full grow relative">
            <img src="assets/img/1-3.jpg" alt="robotexnika maktabi" />
            <img
              src="assets/img/about-img-vector.svg"
              alt="vector"
              class="absolute -top-[25px] left-[25px] -z-[1] w-[90%] max-w-[100%]"
            />
          </div>

          <!-- txt -->
          <div class="max-w-[50%] md:max-w-full shrink-0 grow">
            <h6 class="ed-section-sub-title">Biz haqimizda</h6>
            <h2 class="ed-section-title mb-[9px]">
              Kelajak Muhandislari Maktabiga Xush Kelibsiz
            </h2>
            <p class="text-edgray">
              Zamonaviy R:ED metodologiyasi asosida bolalarni robototexnika,
              dasturlash va muhandislik ko'nikmalariga o'rgatamiz. Bizning o'quv
              markazimiz 5 yoshdan 17 yoshgacha bo'lgan bolalar va o'qituvchilar
              uchun mo'ljallangan.
            </p>
            <!-- infos -->
            <div
              class="flex xs:flex-col gap-y-[15px] gap-x-[30px] xxl:gap-x-[20px] mt-[16px] xxs:mb-[30px] pb-[30px] border-b border-[#dbdbdb] mb-[26px]"
            >
              <!-- single info -->
              <div
                class="flex items-center lg:flex-col lg:items-start md:flex-row md:items-center gap-[20px] xl:gap-[15px]"
              >
                <div
                  class="shrink-0 bg-edpurple h-[80px] xl:h-[70px] aspect-square rounded-[6px] flex items-center justify-center"
                >
                  <img src="assets/img/icon/target.svg" alt="maqsad" />
                </div>

                <!-- txt -->
                <div>
                  <h6 class="font-semibold text-[18px] text-edblue mb-[5px]">
                    Bizning Maqsadimiz
                  </h6>
                  <p class="text-[16px] text-edgray">
                    Yosh avlodni zamonaviy texnologiyalar orqali kelajak
                    kasblarga tayyorlash
                  </p>
                </div>
              </div>

              <div
                class="flex items-center lg:flex-col lg:items-start md:flex-row md:items-center gap-[20px] xl:gap-[15px]"
              >
                <div
                  class="shrink-0 bg-edpurple h-[80px] xl:h-[70px] aspect-square rounded-[6px] flex items-center justify-center"
                >
                  <img src="assets/img/icon/book-light.svg" alt="qarash" />
                </div>

                <!-- txt -->
                <div>
                  <h6 class="font-semibold text-[18px] text-edblue mb-[5px]">
                    Bizning Ko'rsatkichimiz
                  </h6>
                  <p class="text-[16px] text-edgray">
                    Innovatsion ta'lim orqali kelajak muhandislarini tarbiyalash
                  </p>
                </div>
              </div>
            </div>

            <div class="flex flex-wrap items-center gap-x-[24px] gap-y-[20px]">
              <div class="flex gap-x-[8px]">
                <div
                  class="rounded-full overflow-hidden w-[58px] aspect-square shrink-0"
                >
                  <img
                    src="assets/img/user.jpg"
                    alt="Direktor"
                    class="w-[58px] aspect-square"
                  />
                </div>
                <div>
                  <h5 class="font-semibold text-[18px] text-black mb-[4px]">
                    Furqat Usmonov
                  </h5>
                  <h6 class="text-edgray">
                    Direktor <span class="text-edpurple"
                      >Kelajak Muhandislari Maktabi</span
                    >
                  </h6>
                </div>
              </div>
              <a target="_blank" href="https://t.me/FurkatUs" class="ed-btn"
                >Direktorga Xabar Yozish</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- ABOUT SECTION END -->

    <!-- CLASSES SECTION START -->
    <section
      class="py-[120px] xl:py-[80px] md:py-[60px] bg-[url('../assets/img/classes-bg-red.png')] bg-cover bg-top bg-no-repeat"
    >
      <div
        class="mx-[19.71%] xxxl:mx-[14.71%] xxl:mx-[9.71%] xl:mx-[5.71%] md:mx-[12px]"
      >
        <!-- section heading -->
        <div class="text-center mb-[46px] lg:mb-[36px] xxs:mb-[26px]">
          <h6 class="ed-section-sub-title text-white">O'quv Dasturlarimiz</h6>
        </div>

        <!-- cards -->
        <div
          class="grid grid-cols-3 md:grid-cols-2 xs:grid-cols-1 xs:max-w-[80%] xxs:max-w-full mx-auto gap-[30px] lg:gap-[20px]"
        >
          <!-- Maktabgacha yoshdagi bolalar uchun -->
          <div
            class="bg-[url('../assets/img/class-bg.png')] bg-no-repeat bg-center bg-[length:100%_100%] p-[25px] sm:p-[20px]"
          >
            <div class="mb-[22px]">
              <img
                src="assets/img/1-4.jpg"
                alt="maktabgacha ta'lim"
                class="aspect-[161/108] object-cover w-full"
              />
            </div>
            <!-- txt -->
            <div>
              <h5 class="font-semibold text-[20px] text-edblue mb-[8px]">
                <a href="#" class="hover:text-edpurple"
                  >Maktabgacha Yoshdagi Bolalar</a
                >
              </h5>
              <p class="text-edgray mb-[15px]">
                LEGO konstruktorlari yordamida robototexnika asoslari, ijodiy
                fikrlash va mayda motorika ko'nikmalarini rivojlantirish
              </p>
              <!-- infos -->
              <div
                class="flex gap-x-[20px] sm:flex-wrap justify-between sm:justify-start pt-[17px] border-t border-dashed border-edyellow"
              >
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Yosh</span>
                  <h6>5-6 yosh</h6>
                </div>
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Haftalik</span>
                  <h6>2 kun</h6>
                </div>
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Davomiyligi</span>
                  <h6>1.5 soat</h6>
                </div>
              </div>
            </div>
          </div>

          <!-- Maktab o'quvchilari uchun -->
          <div
            class="bg-[url('../assets/img/class-bg.png')] bg-no-repeat bg-center bg-[length:100%_100%] p-[25px] sm:p-[20px]"
          >
            <div class="mb-[22px]">
              <img
                src="assets/img/2-1.jpg"
                alt="maktab o'quvchilari"
                class="aspect-[161/108] object-cover w-full"
              />
            </div>
            <!-- txt -->
            <div>
              <h5 class="font-semibold text-[20px] text-edblue mb-[8px]">
                <a href="#" class="hover:text-edpurple">Maktab O'quvchilari</a>
              </h5>
              <p class="text-edgray mb-[15px]">
                Dasturlash, sxemotexnika va 3D-modellashtirish orqali
                robototexnika sohasida amaliy ko'nikmalarni shakllantirish
              </p>
              <!-- infos -->
              <div
                class="flex gap-x-[20px] sm:flex-wrap justify-between sm:justify-start pt-[17px] border-t border-dashed border-edyellow"
              >
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Yosh</span>
                  <h6>7-17 yosh</h6>
                </div>
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Haftalik</span>
                  <h6>3 kun</h6>
                </div>
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Davomiyligi</span>
                  <h6>2 soat</h6>
                </div>
              </div>
            </div>
          </div>

          <!-- O'qituvchilar uchun -->
          <div
            class="bg-[url('../assets/img/class-bg.png')] bg-no-repeat bg-center bg-[length:100%_100%] p-[25px] sm:p-[20px]"
          >
            <div class="mb-[22px]">
              <img
                src="assets/img/3-1.jpg"
                alt="o'qituvchilar kursi"
                class="aspect-[161/108] object-cover w-full"
              />
            </div>
            <!-- txt -->
            <div>
              <h5 class="font-semibold text-[20px] text-edblue mb-[8px]">
                <a href="#" class="hover:text-edpurple"
                  >O'qituvchilar Uchun Kurs</a
                >
              </h5>
              <p class="text-edgray mb-[15px]">
                R:ED metodologiyasi asosida robototexnika bo'yicha professional
                o'qituvchi bo'lish imkoniyati
              </p>
              <!-- infos -->
              <div
                class="flex gap-x-[20px] sm:flex-wrap justify-between sm:justify-start pt-[17px] border-t border-dashed border-edyellow"
              >
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Davomiyligi</span>
                  <h6>3 oy</h6>
                </div>
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Haftalik</span>
                  <h6>2 kun</h6>
                </div>
                <div class="font-semibold">
                  <span class="text-[14px] text-edyellow">Format</span>
                  <h6>Aralash</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- CLASSES SECTION END -->

    <!-- ADMISSION PROCESS SECTION START -->
    <section
      class="py-[120px] xl:py-[80px] md:py-[60px] bg-[#FAF9F6] relative z-[1]"
    >
      <div
        class="mx-[19.71%] xxxl:mx-[14.71%] xxl:mx-[9.71%] xl:mx-[5.71%] md:mx-[12px]"
      >
        <div class="flex flex-col gap-x-[85px] items-start relative">
          <!-- heading -->
          <div
            class="relative w-full before:absolute before:bottom-0 before:mb-[8%] before:left-0 before:bg-[url('../assets/img/admission-title-vector.svg')] before:bg-no-repeat before:bg-[length:100%_100%] before:w-[100%] before:h-[88px] before:pointer-events-none lg:before:hidden"
          >
            <div class="shrink-0 max-w-[290px]">
              <h6 class="ed-section-sub-title">Ro'yxatdan o'tish</h6>
              <h2
                class="ed-section-title !text-[30px] pb-[42px] lg:pb-0 mb-[40px] lg:mb-[20px]"
              >
                Qanday Qo'shilish
              </h2>
              <a href="#" class="ed-btn">Hoziroq Boshlang</a>
            </div>
          </div>

          <!-- cards -->
          <div
            class="grid grid-cols-3 sm:grid-cols-2 xxs:grid-cols-1 gap-[24px] -mt-[140px] lg:mt-[25px] w-[66%] ml-auto lg:w-[100%]"
          >
            <!-- Bepul Dars -->
            <div
              class="bg-white rounded-[10px] p-[24px] shadow-[0_4px_50px_rgba(0,0,0,0.09)]"
            >
              <span class="icon block mb-[13px]">
                <img
                  src="assets/img/admission-process-icon.png"
                  alt="bepul dars"
                  class="h-20 mb-[11px]"
                />
              </span>
              <h4 class="font-semibold text-[18px] mb-[5px] text-edblue">
                <a href="#" class="hover:text-edpurple">Bepul Dars</a>
              </h4>
              <p class="text-edgray2 group-hover:text-black mb-[18px]">
                Bepul sinov darsida qatnashib, bizning o'quv dasturimiz bilan
                tanishing
              </p>
              <a
                href="#"
                class="ed-btn !h-[40px] !bg-white border !border-edpurple !text-edpurple !text-[14px] !font-semibold hover:!bg-edpurple hover:!text-white"
              >
                Batafsil
              </a>
            </div>

            <!-- Kurs Tanlash -->
            <div
              class="bg-white rounded-[10px] p-[24px] shadow-[0_4px_50px_rgba(0,0,0,0.09)]"
            >
              <span class="icon block mb-[13px]">
                <img
                  src="assets/img/admission-process-icon.png"
                  alt="kurs tanlash"
                  class="h-20 mb-[11px]"
                />
              </span>
              <h4 class="font-semibold text-[18px] mb-[5px] text-edblue">
                <a href="#" class="hover:text-edpurple">Kurs Tanlash</a>
              </h4>
              <p class="text-edgray2 group-hover:text-black mb-[18px]">
                O'zingizga mos kursni tanlang va R:ED metodikasi bilan tanishing
              </p>
              <a
                href="#"
                class="ed-btn !h-[40px] !bg-white border !border-edpurple !text-edpurple !text-[14px] !font-semibold hover:!bg-edpurple hover:!text-white"
              >
                Batafsil
              </a>
            </div>

            <!-- Ro'yxatdan O'tish -->
            <div
              class="bg-white rounded-[10px] p-[24px] shadow-[0_4px_50px_rgba(0,0,0,0.09)]"
            >
              <span class="icon block mb-[13px]">
                <img
                  src="assets/img/admission-process-icon.png"
                  alt="ro'yxatdan o'tish"
                  class="h-20 mb-[11px]"
                />
              </span>
              <h4 class="font-semibold text-[18px] mb-[5px] text-edblue">
                <a href="#" class="hover:text-edpurple">Ro'yxatdan O'tish</a>
              </h4>
              <p class="text-edgray2 group-hover:text-black mb-[18px]">
                Ro'yxatdan o'ting va kelajak kasblari sari birinchi qadamni
                qo'ying
              </p>
              <a
                href="#"
                class="ed-btn !h-[40px] !bg-white border !border-edpurple !text-edpurple !text-[14px] !font-semibold hover:!bg-edpurple hover:!text-white"
              >
                Batafsil
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- vectors -->
      <div>
        <img
          src="assets/img/admission-vector-1.svg"
          alt="vector"
          class="absolute -z-[1] top-[156px] left-0"
        />
        <img
          src="assets/img/admission-vector-2.svg"
          alt="vector"
          class="absolute -z-[1] bottom-[130px] right-[80px]"
        />
      </div>
    </section>
    <!-- ADMISSION PROCESS SECTION END -->

    <!-- CTA SECTION START -->
    <section class="bg-edpurple relative z-[1] overflow-hidden">
      <div
        class="mx-[19.71%] xxxl:mx-[14.71%] xxl:mx-[9.71%] xl:mx-[5.71%] md:mx-[12px]"
